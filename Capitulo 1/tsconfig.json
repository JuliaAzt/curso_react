{
  "compilerOptions": {
    "target": "es5",                            
    "lib": ["dom","dom.iterable", "esnext"],                                      
    "jsx": "react-jsx",   /* Utilizando jsx (HTMl dentro do Js e ts)*/                             
    "module": "commonjs",                                                             
    "moduleResolution": "node",                                          
    "resolveJsonModule": true, /* Possibilidade de importar arquivos JSON */                       
    "allowJs": true,  /* Permite arquivos ts e js */                                                        
    "noEmit": true,                                                     
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                                                   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                                          
    "skipLibCheck": true                                 
  }, 
  "include" : ["src"] /* Onde o código typescript da aplicação estará */
}
